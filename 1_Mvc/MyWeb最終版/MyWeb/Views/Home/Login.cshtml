@model MyWeb.Models.Employee

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row ">
    <h1>Login</h1>
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="E_Account" class="control-label"></label>
                <input asp-for="E_Account" class="form-control" id="C_Email" />
                <span asp-validation-for="E_Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_Password" class="control-label"></label>
                <input asp-for="E_Password" class="form-control" type="password" id="Cpw" />
                <span asp-validation-for="E_Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

