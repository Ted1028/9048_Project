@model IEnumerable<MyWeb.Models.Meal>

@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <style>
        .h33 {
            color: cornsilk;
        }

        th {
            color: darkseagreen;
        }

        td {
            color: blanchedalmond;
        }

        .tdd {
            color: blanchedalmond;
        }
        .imggg{
            width:300px;
            height:270px;
        }
        h1{
            color:aliceblue;
        }
    </style>


}
<h1>餐點清單</h1>

<p>
    <a asp-controller="Meals" asp-action="Create" asp-route-name="@ViewBag.Name" style="text-decoration:none"><span class="icon-plus "></span>&emsp; <span>Add Meals</span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.R_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M_InFo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M_ImgFile)
            </th>
            <th>編輯</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.R_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.M_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.M_InFo)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.M_Price)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.M_ImgFile)*@
                    <img src="/../../images/meals/@Html.DisplayFor(modelItem => item.M_ImgFile)" alt="Alternate Text" class="imggg" style="width: 150px; height: 110px;"/>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MID" asp-route-name="@ViewBag.Name" style="text-decoration:none; justify-content:flex-start;" class="float-left"><i class="icon-note tdd "></i></a>
                    <a asp-action="Details" asp-route-id="@item.MID" asp-route-name="@ViewBag.Name" style="text-decoration: none; justify-content:flex-start;" class="float-left"><i class="icon-bubble tdd"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.MID" asp-route-name="@ViewBag.Name" style="text-decoration: none; justify-content: flex-start;" class="float-left"><i class="icon-trash tdd"></i></a>
                </td>
            </tr>
        }


    </tbody>
</table>

<p>
    <a asp-controller="Restaurants" asp-action="Index" style="text-decoration:none"><span class="ti-share-alt "></span>&emsp; <span>Back</span></a>
</p>
