@model IEnumerable<MyWeb.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

@section Styles{ 
    <style>
        th {
            color: darkseagreen;
        }

        td {
            color: blanchedalmond;
        }

        .tdd {
            color: blanchedalmond;
        }

     

        h1 {
            color: aliceblue;
        }
    </style>
}
<h1>Employees List</h1>

<p>
    <a asp-action="Create" style="text-decoration:none"><span class="icon-plus "></span>&emsp; <span>Add Employee</span></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.E_Email)
            </th>
            <th>編輯</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.E_Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeID" style="text-decoration:none; justify-content:flex-start;" class="float-left tdd"><i class="icon-note " ></i></a>
                <a asp-action="Details" asp-route-id="@item.EmployeeID" style="text-decoration: none; justify-content:flex-start;" class="float-left tdd"><i class="icon-bubble "></i></a>
                <a asp-action="Delete" asp-route-id="@item.EmployeeID" style="text-decoration: none; justify-content: flex-start;" class="float-left tdd"><i class="icon-trash "></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
