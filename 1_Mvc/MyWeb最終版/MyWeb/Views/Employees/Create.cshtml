@model MyWeb.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
@section Styles{ 
    <style>
        h1 {
            color: aqua;
        }

        .h44 {
            color: aqua;
        }

        label {
            color: antiquewhite;
        }
    </style>
}
<h4 class="h44">Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="E_Name" class="control-label"></label>
                <input asp-for="E_Name" class="form-control" />
                <span asp-validation-for="E_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_Account" class="control-label"></label>
                <input asp-for="E_Account" class="form-control" />
                <span asp-validation-for="E_Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_Password" class="control-label"></label>
                <input asp-for="E_Password" class="form-control" />
                <span asp-validation-for="E_Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_Phone" class="control-label"></label>
                <input asp-for="E_Phone" class="form-control" />
                <span asp-validation-for="E_Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="E_Email" class="control-label"></label>
                <input asp-for="E_Email" class="form-control" />
                <span asp-validation-for="E_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
